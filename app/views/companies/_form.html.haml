    = f.text_field :name
  .field
    = f.label :logo
    = f.text_field :logo
  .field
    = f.label :hq
    = f.text_field :hq
  .field
    = f.label :address
    = f.text_field :address
  .field
    = f.label :linkedin
    = f.text_field :linkedin
  .field
    = f.label :indeed
    = f.text_field :indeed
  .field
    = f.label :url
    = f.text_field :url
  .actions
    = f.submit 'Save'
